                <TextBlock Grid.Row="0" Margin="3,3,3,0">Select contact</TextBlock>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0" Text="{Binding Filter, Mode=TwoWay}" Margin="3,3,3,3"></TextBox>

