<Window x:Class="Redmine.OutlookAddIn.NewCrmNoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:Redmine.OutlookAddIn"
        xmlns:ViewModel="clr-namespace:Redmine.OutlookAddIn.ViewModel"
        mc:Ignorable="d" 
        d:DesignHeight="300" d:DesignWidth="300">
    <Window.DataContext>
        <ViewModel:NewCrmNoteViewModel />
    </Window.DataContext>
    <DockPanel>
        <Grid DockPanel.Dock="Bottom" Background="LightGray">
            <StackPanel Orientation="Horizontal"  HorizontalAlignment="Right" VerticalAlignment="Bottom">
                <Button Height="23" Margin="12,12,12,12" Width="75" IsCancel="True">Cancel</Button>
                <Button Height="23" Margin="12,12,12,12" Name="buttonClose" Width="75" FontWeight="Bold" IsDefault="True">_Add note</Button>
            </StackPanel>

        </Grid>
        <StackPanel Margin="3">
            <TextBlock Margin="3,3,3,0">Contact</TextBlock>
            <ListBox ItemsSource="{Binding Contacts}"></ListBox>
        </StackPanel>
    </DockPanel>
</Window>
